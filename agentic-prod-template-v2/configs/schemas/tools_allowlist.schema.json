{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "tools_allowlist.yaml",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "sandbox",
    "network"
  ],
  "properties": {
    "sandbox": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "mode_default",
        "timeouts",
        "allowlist_commands",
        "denylist_patterns"
      ],
      "properties": {
        "mode_default": {
          "type": "string",
          "enum": ["read-only", "write", "full"]
        },
        "timeouts": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "cmd_seconds",
            "test_seconds"
          ],
          "properties": {
            "cmd_seconds": { "type": "integer", "minimum": 1 },
            "test_seconds": { "type": "integer", "minimum": 1 }
          }
        },
        "allowlist_commands": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "denylist_patterns": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        }
      }
    },
    "network": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "default",
        "allowlist_hosts"
      ],
      "properties": {
        "default": {
          "type": "string",
          "enum": ["deny", "allowlist", "allow"]
        },
        "allowlist_hosts": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        }
      }
    }
  }
}
