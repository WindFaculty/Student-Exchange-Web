{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "project.yaml",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "project",
    "rag"
  ],
  "properties": {
    "project": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "description",
        "primary_languages",
        "stack",
        "conventions",
        "definition_of_done"
      ],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "description": { "type": "string", "minLength": 1 },
        "primary_languages": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "stack": {
          "type": "object",
          "minProperties": 1,
          "additionalProperties": { "type": "string", "minLength": 1 }
        },
        "conventions": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "branching",
            "commit_style",
            "code_style"
          ],
          "properties": {
            "branching": { "type": "string", "minLength": 1 },
            "commit_style": { "type": "string", "minLength": 1 },
            "code_style": {
              "type": "object",
              "minProperties": 1,
              "additionalProperties": { "type": "string", "minLength": 1 }
            }
          }
        },
        "definition_of_done": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        }
      }
    },
    "rag": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "include_globs",
        "exclude_globs",
        "chunking"
      ],
      "properties": {
        "include_globs": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "exclude_globs": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "chunking": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "code",
            "text"
          ],
          "properties": {
            "code": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "strategy",
                "max_chars"
              ],
              "properties": {
                "strategy": { "type": "string", "enum": ["by_symbol", "fixed"] },
                "max_chars": { "type": "integer", "minimum": 256 }
              }
            },
            "text": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "max_chars"
              ],
              "properties": {
                "max_chars": { "type": "integer", "minimum": 256 }
              }
            }
          }
        }
      }
    }
  }
}
