{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "agents.yaml",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "agents"
  ],
  "properties": {
    "agents": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "default",
        "roles"
      ],
      "properties": {
        "default": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "max_steps",
            "require_plan",
            "require_diff",
            "require_tests_for_merge",
            "session_rules",
            "stop_on"
          ],
          "properties": {
            "max_steps": { "type": "integer", "minimum": 1 },
            "require_plan": { "type": "boolean" },
            "require_diff": { "type": "boolean" },
            "require_tests_for_merge": { "type": "boolean" },
            "session_rules": {
              "type": "array",
              "minItems": 1,
              "items": { "type": "string", "minLength": 1 }
            },
            "stop_on": {
              "type": "array",
              "minItems": 1,
              "items": { "type": "string", "minLength": 1 }
            }
          }
        },
        "roles": {
          "type": "object",
          "minProperties": 1,
          "additionalProperties": {
            "type": "object",
            "additionalProperties": false,
            "required": ["focus"],
            "properties": {
              "focus": { "type": "string", "minLength": 1 }
            }
          }
        }
      }
    }
  }
}
