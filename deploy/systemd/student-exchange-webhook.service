[Unit]
Description=Student Exchange GitHub Webhook Listener
After=network.target
Wants=network.target

[Service]
Type=simple
User=deploy
Group=deploy
WorkingDirectory=/opt/student-exchange/app
EnvironmentFile=/etc/student-exchange/webhook-listener.env
ExecStart=/usr/bin/python3 /opt/student-exchange/app/deploy/listener/webhook_listener.py
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
